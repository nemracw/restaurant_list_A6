<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" 
          aria-label="Restaurant Name..." value="{{enteredKeywords}}" aria-describedby="search-button" require/>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
    {{!-- add new restaurant feature --}}
    <div class="container new-res d-flex flex-row-reverse">
      <a href="/restaurant/new" class="btn btn-primary mt-3">新增餐廳</a>
    </div>
  </div>
</div>



<!-- restaurant list -->
{{#if restaurant}}
<div class="container mt-5 px-md-5">
  <div class="row">
    {{!-- Print restaurants here --}}
    {{#each restaurant}}
    <div class="col-12 col-sm-6 col-md-4">
      <div class="card mb-3">
        <img class="card-img-top" src="{{this.image}}" alt="{{restaurant.name}}">
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>
          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i>
            {{this.category}}
          </div>
          <span class="badge badge-pill badge-danger font-weight-normal">
            {{ this.rating }}
            <i class="fas fa-star fa-xs"></i>
          </span>
        </div>
        <div class="card-footer d-flex justify-content-end flex-wrap">
          <a href="./restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
          <a href="./restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
          <form action="./restaurants/{{this._id}}/delete" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger btn-sm text-white">delete</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>


{{else}}
<div class="m-5 text-center">
  <p class="m-5">找不到符合「<span class="text-danger">{{enteredKeywords}}</span>」的餐廳，請嘗試輸入其它關鍵字
    <a href="/">
      <i class="fas fa-home fa-2x ml-2" style="color:rgb(139, 109, 62)"></i>
    </a>
  </p>
</div>
{{/if}}